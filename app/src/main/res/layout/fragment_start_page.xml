<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    app:navGraph="@navigation/nav_graph"
    app:defaultNavHost="true">

    <data>
        <variable
            name="StartPageViewModel"
            type="com.example.myapp.startpage.StartPageViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/fragment_start_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Перелік справ на день" />

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:text="@{StartPageViewModel.edit}"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:hint="Введіть ваше ім'я" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/edit_message"
            android:layout_below="@id/textView"
            android:text="Увійти" />

        <!--<Button
            android:id="@+id/button2"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:layout_below="@id/edit_message"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="250dp"
            android:text="Розробник" />!-->

    </RelativeLayout>

</layout>